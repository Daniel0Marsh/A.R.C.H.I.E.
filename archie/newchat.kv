<NewChat>:
    size_hint: 1, None
    height: self.minimum_height
    padding: "10dp", "10dp", "10dp", "10dp"

    MDBoxLayout:
        size_hint: 1, None
        pos_hint: {"center_x": .5}
        height: self.minimum_height
        orientation: 'vertical'
        spacing: "15dp"  # Adjust the spacing between the cards and buttons

        MDCard:
            size_hint: 1, None
            size: "300dp", "180dp"
            pos_hint: {"center_x": .5}
            elevation: 3
            padding: "8dp"
            spacing: "8dp"
            theme_text_color: "Primary"
            md_bg_color: app.theme_cls.bg_dark if app.theme_cls.theme_style == 'Dark' else app.theme_cls.bg_light

            BoxLayout:
                orientation: "vertical"
                spacing: "8dp"

                MDLabel:
                    text: "My History"
                    theme_text_color: "Primary" if app.theme_cls.theme_style == 'Dark' else "Secondary"
                    font_style: "H6"

                ScrollView:
                    do_scroll_y: True
                    effect_cls: 'ScrollEffect'
                    bar_width: 0
                    size_hint_y: None
                    height: self.parent.height - dp(20)  # Adjust the height based on label height

                    MDBoxLayout:
                        adaptive_height: True
                        orientation: 'vertical'


                        MDBoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            adaptive_height: True
                            radius: [20, 20, 0, 0]
                            MDList:
                                id: chatlist
                                spacing: 5


        MDCard:
            size_hint: 1, None
            size: "300dp", "140dp"
            pos_hint: {"center_x": .5}
            elevation: 3
            padding: "8dp"
            spacing: "8dp"
            theme_text_color: "Primary"
            md_bg_color: app.theme_cls.bg_dark if app.theme_cls.theme_style == 'Dark' else app.theme_cls.bg_light

            BoxLayout:
                orientation: "vertical"

                MDLabel:
                    text: "[size=18][b]Important Note:[/b][/size]"
                    theme_text_color: "Error"
                    markup: True

                MDLabel:
                    text: "Chatbots are AI models that provide automated responses. While they can be helpful, they may not always provide accurate or appropriate information."
                    theme_text_color: "Primary" if app.theme_cls.theme_style == 'Dark' else "Secondary"
                    font_style: "Caption"
                    markup: True

        BoxLayout:
            size_hint: 1, None
            pos_hint: {"center_x": .5}
            height: self.minimum_height
            padding: "35dp", 0, 0, 0
            spacing: "10dp"  # Adjust the spacing between the buttons

            MDRaisedButton:
                text: "Tell me a joke"
                md_bg_color: app.theme_cls.primary_color
                on_release: root.chat_subject("Tell me a joke")

            MDRaisedButton:
                text: "Fun fact"
                md_bg_color: app.theme_cls.primary_color
                on_release: root.chat_subject("Tell me a fun fact")

            MDRaisedButton:
                text: "What's AI"
                md_bg_color: app.theme_cls.primary_color
                on_release: root.chat_subject("Tell me what AI is")
